


{% block body %}

  {# S'il y a une erreur, on l'affiche dans un joli cadre #}

  {% if error %}

    <div class="alert alert-danger">{{ error.message }}</div>

  {% endif %}


  {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
<div class="padding_login">
<ul class="">
            <li class="formLogin__column padding__FormLogin">
              <a class="btn btn-block btn-social btn-facebook" href="{{ path('bissap_oauth_connect') }}"><i class="fa fa-facebook" aria-hidden="true"></i>Se connecter via Facebook</a>
            </li>
            <li class="li_register"></li>
            <li class="formLogin__column">
	<div class="">
		<div class=""></div>
		<div class="">
			<form  class="" action="{{ path('fos_user_security_check') }}" method="post">
		  		<div class="form-group">
		    		<label class="control-label required" for="username">Login :</label>

		    		<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
				</div>
		  <div class="form-group">
		    <label class="control-label required" for="password">Mot de passe :</label>

		    	<input class="form-control" type="password" id="password" name="_password" />
		</div>
		    <br />

		    <div class="center"><input type="submit" class="loginbox__submit bc-btn btn" value="Connexion" /></div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			</form>
		</div>
    	</li>
    </div>		
</div>

{% endblock %} 

