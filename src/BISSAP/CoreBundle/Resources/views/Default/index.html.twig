				<div class="modal-content">
					
				</div>
			</div>
		</div>

	
        <div class="inscription_connexion">
				
	
					<div>
							<a tabindex="-1" href="{{ path('fos_user_registration_register') }}" data-toggle="modal" data-target="#modalInscription">		<div class="div_inscription">
							<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>  Inscription</div>
							</a>
