{% extends "::layout.html.twig" %}


{% block body %}

<script type="text/javascript">
	
$(document).ready(function () {
    
	$(function(){
	    $('#modalProfil').on('show.bs.modal', function(){
	        var myModal = $(this);
	        clearTimeout(myModal.data('hideInterval'));
	        myModal.data('hideInterval', setTimeout(function(){
	            myModal.modal('hide');
	        }, 180000));
	    });
	});

});

</script>
{% if is_granted('IS_AUTHENTICATED_FULLY') %}

    		<!-- Modal profil -->

    		<div class="modal fade" id="modalProfil" tabindex="-1" role="dialog">
				<div class="modal-dialog" role="document">
					<div class="modal-content">	
					</div>
				</div>
			</div>

			<!-- Modal delete account -->

    		<div class="modal fade" aria-labelledby="myModalLabel" aria-hidden="true" id="modalDelete" tabindex="-1" role="dialog">
				<div class="modal-dialog" role="document">
					<div class="modal-content delete_account">	

						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title" id ="myModalLabel">Confirmation de supression</h4>
						</div>
						<div class="modal-body">
							<p>Vous etes sur le point de supprimer votre compte, toutes les données liées à ce compte seront supprimées </p>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
							<a href="{{ path('user_delete', {'id': app.user.id }) }}" class="btn btn-danger btn-ok">Supprimer</a>
						</div>
					</div>
				</div>
			</div>


	<div class="profil">
				
	
					<div>
						
							<a tabindex="-1" href="{{ path('user_edit', {'id': app.user.id }) }}" data-toggle="modal" data-target="#modalProfil"><div class="div_profil">	
